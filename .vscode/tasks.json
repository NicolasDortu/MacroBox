{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "compile resources",
			"type": "shell",
			"command": "windres",
			"args": ["resource.rc", "-O", "coff", "-o", "resource.o"],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": []
		},
		{
			"label": "build",
			"type": "shell",
			"command": "g++",
			"args": [
				"-g",
				"src/main.cpp",
				"src/window.cpp",
				"src/dialog.cpp",
				"src/utils.cpp",
				"resource.o",
				"-Iinclude",
				"-o",
				"build/MacroBox.exe",
				"-lgdi32",
				"-lcomctl32",
				"-mwindows"
			],
			"dependsOn": "compile resources",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$gcc"],
			"detail": "Generated task by debugging."
		}
	]
}
